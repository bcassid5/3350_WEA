<div class="ui center aligned header">
  <h2>Upload Database File</h2>
</div>
<br>
<div class="ui two column centered grid">
  <div class="four column centered row">
    <div class="ui input">
      <input type="file" id="file-field" class="ui input"/>
      <div class="ui button" {{action 'upload'}} style="background-color: #4F2683; color: #ffffff">Upload</div>  
    </div>
    
    <br><br>
    {{#if success}}
      <h4>Successfuly uploaded file: {{filename}}</h4>
    {{/if}}

  </div>
</div>

