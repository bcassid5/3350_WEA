 <div class="ui tab" data-tab="hsSubject">
       <div class="ui grid">
            <div class="ui lef aligned five wide column"></div>
            <div class="ui lef aligned seven wide column">
                <div class="ui form">
                    <br>
                     {{#each highSchoolSubjectModel as |highSchoolSubjectChoice index|}}
