                    </div>
                </div>
            </div>          
        </div>
   </div>

   <div class="ui tab" data-tab="hsCourse">
       <div class="ui grid">
            <div class="ui lef aligned one wide column"></div>
            <div class="ui lef aligned fifteen wide column">
                <div class="ui form">
                    <br>
                     {{#each highSchoolCourseModel as |highSchoolCourseChoice index|}}
                    <div class="fields">
                        <div class="field">
                            <br/>
                            <label style="text-align: center">Option</label>
                            <label style="text-align: center">{{index}}</label>
                        </div>
                        <div class="field">
                            <label style="width: 70px">Level</label>
                            <input value={{highSchoolCourseChoice.level}} type="text"  onchange = {{action 'changeCourseLevel' index}} class = {{index}}>
                        </div>
                        <div class="field">
