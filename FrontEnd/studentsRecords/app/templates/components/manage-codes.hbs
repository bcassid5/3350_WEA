                    </a>
                    </div>
                    {{/each}}
                    
                    <div class="inline field">
                        <label>Add New</label>
                        <input value="" type="text" onchange={{action 'updateGenderChoice' value="target.value"}}>
                        <a {{action 'addGenderOption'}}> 
                        <i class="large green add square icon"></i> <br>
                    </a>
                    </div>
                    
                </div>
                
            </div>
