                    </div>
                    {{/each}}
                    
                    <div class="fields">
                        <div class="field">
                            <br/>
                            <label style="text-align: center">Add</label>
                            <label style="text-align: center">New</label>
                        </div>
                        <div class="field">
                            <label>Level</label>
                            <input style="width: 70px" placeholder="Level" value="" type="text" onchange={{action 'updateCourseLevel' value="target.value"}}>
                        </div>
                        <div class="field">
                            <label>Source</label>
                            <input style="width: 80px" placeholder="Source" value="" type="text" onchange={{action 'updateCourseSource' value="target.value"}}>
                        </div>
                        <div class="field">
                            <label>Unit</label>
                            <input style="width: 60px" placeholder="Unit" value="" type="text" onchange={{action 'updateCourseUnit' value="target.value"}}>
                        </div>
                        <div class="field">
                            <label>Subject</label>
                            <select onchange={{action 'updateCourseSubject' value="target.value"}}>
                                <option value="" disabled selected style="display: none;">Subject</option>
                                {{#each highSchoolSubjectModel as |highSchoolSubjectChoice|}}
                                    <option value={{highSchoolSubjectChoice.id}}>{{highSchoolSubjectChoice.name}} </option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="field">
                            <label>High School</label>
                            <select style="width: 250px" onchange={{action 'updateCourseHighSchool' value="target.value"}}>
                                <option value="" disabled selected style="display: none;">High School</option>
                                {{#each highSchoolModel as |highSchoolChoice|}}
                                    <option value={{highSchoolChoice.id}}>{{highSchoolChoice.name}} </option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="field">
                            <br/><br/>
                            <a {{action 'addCourseOption'}}> 
                                <i class="large green add square icon"></i> <br>
                            </a>
                        </div>
                    </div>
                </div>
            </div>          
        </div>
   </div>