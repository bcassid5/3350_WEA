<div class="ui modal">
  <div class="header" style="font-size: 150%">Find Record</div>
  <div class="content">
      <div class="ui grid">
          <div class="ui right aligned  seven wide column">
              <div class="ui form">
                 <div class="inline field">
                    <label>Student Number</label>
                     {{input size="10" type="text"}}
                 </div>
                 <div class="inline field">
                    <label>First Name</label>
                     {{input size="10" type="text"}}
                 </div>
                 <div class="inline field">
                    <label>Last Name</label>
                     {{input size="10" type="text"}}
                 </div>
              </div>
          </div>
      </div>
      <br/><br/>
    <div class="actions">
        <div class="ui button" {{action "search"}}>Search</div>
      <div class="ui button" {{action "exit"}}>OK</div>
    </div>
  </div>
</div>


